{
  "name": "cypressdemo",
  "version": "1.0.0",
  "description": "Matt testing Cypress and Cypress-Axe",
  "main": "index.js",

  "scripts": {
    "pretest": "rimraf  --glob ./AccessibilityReports/mochawesome/*.*",
    "test": "npm run cypress-test || npm run posttest",
    "cypress-test": "cypress run --browser chrome",
    "posttest": "npm run merge-reports && npm run generate-html-report",
    "merge-reports": "mochawesome-merge AccessibilityReports/mochawesome/*.json -o AccessibilityReports/mochawesome/result.json",
    "generate-html-report": "marge AccessibilityReports/mochawesome/result.json --reportDir ./ --inline",
    "myLink": "npx cypress run --spec cypress/e2e/LinkAppAccessibilityCheck.cy.js --browser chrome  --headless"
  },
  
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/mustache": "^4.2.5",
    "axe-core": "^4.8.4",
    "cypress": "^13.6.6",
    "cypress-axe": "^1.5.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "mustache": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
